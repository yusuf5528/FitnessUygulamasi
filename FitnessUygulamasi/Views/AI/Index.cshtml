@model FitnessUygulamasi.Models.AIRequestViewModel

@{
    ViewData["Title"] = "AI Fitness Danışmanı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>🤖 Yapay Zeka Destekli Program Oluşturucu</h3>
                    <p class="mb-0">Vücut ölçülerinizi girin, AI size özel planı hazırlasın.</p>
                </div>
                <div class="card-body p-4">

                    <form asp-action="GeneratePlan" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Kilonuz (kg)</label>
                                <input asp-for="Weight" class="form-control" type="number" placeholder="Örn: 75" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Boyunuz (cm)</label>
                                <input asp-for="Height" class="form-control" type="number" placeholder="Örn: 180" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cinsiyet</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadin">Kadın</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hedefiniz Nedir?</label>
                            <select asp-for="Goal" class="form-select">
                                <option value="kilo_verme">Kilo Vermek & Yağ Yakmak</option>
                                <option value="kas_yapma">Kas Kütlesi Kazanmak (Hacim)</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-cpu"></i> Analiz Et ve Plan Oluştur
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Result))
                    {
                        <div class="alert alert-info mt-4" role="alert">
                            <h4 class="alert-heading"><i class="bi bi-robot"></i> Yapay Zeka Önerisi:</h4>
                            <hr>
                            <p style="white-space: pre-line">@Model.Result</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>